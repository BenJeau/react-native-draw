{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@benjeau/react-native-draw-core": ["packages/core/src"],
      "@benjeau/react-native-draw-extras": ["packages/extras/src"],
      "@benjeau/react-native-draw-skia": ["packages/skia/src"],
      "@benjeau/react-native-draw-svg": ["packages/svg/src"]
    },
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "error",
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "jsx": "react",
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noStrictGenericChecks": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": [
    "packages/*/lib",
  ]
}
